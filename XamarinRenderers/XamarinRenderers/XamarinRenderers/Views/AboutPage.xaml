<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinRenderers.Views.AboutPage"
             xmlns:vm="clr-namespace:XamarinRenderers.ViewModels"
             xmlns:controls="clr-namespace:XamarinRenderers.Controls"
             Title="{Binding Title}">

    <ContentPage.BindingContext>
        <vm:AboutViewModel />
    </ContentPage.BindingContext>

    <StackLayout>
        <Label Text="String" />
        <controls:NumericEntry  Text="{Binding NumericString}"
                                Placeholder="String" />
        <Label Text="Int" />
        <controls:NumericEntry Text="{Binding NumericInt}"
                               Placeholder="Int" />
        <Button Command="{Binding TestCommand}" />
    </StackLayout>

</ContentPage>
